<Window x:Class="Ssyp.Communicator.ClientXaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ssyp.Communicator.ClientXaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel Uid="Root">
        <StackPanel Orientation="Vertical" Name="CurrentConversation">
            <StackPanel Orientation="Vertical" Name="Messages" />

            <StackPanel Orientation="Horizontal">
                <TextBox Name="MessageToSend" />
                <Button Name="SendButton">Send</Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" Uid="Conversations">
            <TextBox Name="NickToComposeTo" />
            <Button Name="ComposeButton">Compose</Button>
        </StackPanel>
    </DockPanel>
</Window>